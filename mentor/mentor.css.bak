/* ========================================
   THEME VARIABLES
======================================== */
:root {
  --primary-color: #0cc060;
  --primary-dark: #0c984e;
  --accent-color: #39ff14;
  --bg-gradient: #06c974;
  --border-color: rgba(12, 152, 78, 0.3);
  --bg-overlay: rgba(12, 152, 78, 0.1);
  --glow-color: rgba(12, 152, 78, 0.3);
}

/* Blue Theme */
body.theme-blue {
  --primary-color: #60c0ff;
  --primary-dark: #4e98c0;
  --accent-color: #14c8ff;
  --bg-gradient: #74b9c9;
  --border-color: rgba(78, 152, 192, 0.3);
  --bg-overlay: rgba(78, 152, 192, 0.1);
  --glow-color: rgba(78, 152, 192, 0.3);
}

/* Purple Theme */
body.theme-purple {
  --primary-color: #c060ff;
  --primary-dark: #984ec0;
  --accent-color: #e814ff;
  --bg-gradient: #b974c9;
  --border-color: rgba(152, 78, 192, 0.3);
  --bg-overlay: rgba(152, 78, 192, 0.1);
  --glow-color: rgba(152, 78, 192, 0.3);
}

/* Amber Theme */
body.theme-amber {
  --primary-color: #ffc060;
  --primary-dark: #c0984e;
  --accent-color: #ffd814;
  --bg-gradient: #c9b974;
  --border-color: rgba(192, 152, 78, 0.3);
  --bg-overlay: rgba(192, 152, 78, 0.1);
  --glow-color: rgba(192, 152, 78, 0.3);
}

/* Pink Theme */
body.theme-pink {
  --primary-color: #ff60c0;
  --primary-dark: #c04e98;
  --accent-color: #ff14e8;
  --bg-gradient: #c974b9;
  --border-color: rgba(192, 78, 152, 0.3);
  --bg-overlay: rgba(192, 78, 152, 0.1);
  --glow-color: rgba(192, 78, 152, 0.3);
}

/* ========================================
   GLOBAL STYLES
   ======================================== */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
}

html {
  scroll-behavior: smooth;
  scroll-padding-top: 80px;
}

body {
  background: #0f0f0f;
  color: var(--primary-color);
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
  overflow-x: hidden;
  scroll-behavior: smooth;
}

/* ========================================
     BACKGROUND EFFECTS - Optimized for performance
     ======================================== */
.animated-bg {
  position: fixed;
  inset: 0;
  z-index: -10;
  pointer-events: none;
  background: radial-gradient(
    ellipse at center,
    var(--bg-gradient) 0%,
    #000 70%
  );
  /* Use only opacity animation - GPU accelerated, no repaints */
  animation: fadeGlow 12s ease-in-out infinite;
  opacity: 0.15;
  filter: blur(40px);
  /* Hint browser for GPU optimization */
  will-change: opacity;
}

@keyframes fadeGlow {
  0%, 100% {
    opacity: 0.1;
  }
  50% {
    opacity: 0.25;
  }
}

.grid-overlay {
  position: fixed;
  inset: 0;
  z-index: -2;
  pointer-events: none;
  background-image: linear-gradient(
      to right,
      rgba(173, 216, 230, 0.2) 1px,
      transparent 1px
    ),
    linear-gradient(to bottom, rgba(173, 216, 230, 0.2) 1px, transparent 1px);
  background-size: 5px 5px;
  mask-image: linear-gradient(
    to top,
    transparent 30%,
    rgba(255, 255, 255, 0.423) 50%,
    transparent 70%
  );
  mask-size: 100% 300%;
  mask-position: 0 100%;
  animation: gradientReveal 12s ease-in-out infinite;
}

@keyframes gradientReveal {
  0% {
    mask-position: 0 100%;
  }
  100% {
    mask-position: 0 0%;
  }
}

/* ========================================
     TERMINAL LOADER
     ======================================== */
.terminal-loader {
  position: fixed;
  width: 100%;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #0f0f0f;
  z-index: 9999;
  transition: opacity 0.6s ease;
}

.terminal-loader.fade-out {
  opacity: 0;
  pointer-events: none;
}

.terminal-text {
  font-size: 1.2rem;
  color: var(--primary-color);
  text-shadow: 0 0 10px var(--glow-color);
}

.dots::after {
  content: "";
  animation: dots 1.5s steps(4) infinite;
}

@keyframes dots {
  0% {
    content: "";
  }
  25% {
    content: ".";
  }
  50% {
    content: "..";
  }
  75% {
    content: "...";
  }
}

/* ========================================
     MAIN WRAPPER
     ======================================== */
.mentor-wrapper {
  opacity: 0;
  transition: opacity 0.8s ease;
}

.mentor-wrapper.visible {
  opacity: 1;
}

/* ========================================
     NAVIGATION HEADER
     ======================================== */
.mentor-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 1.5rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  opacity: 1;
  transition: opacity 0.4s ease, transform 0.4s ease;
  transform: translateY(0);
}

.mentor-nav.hidden {
  opacity: 0;
  transform: translateY(-20px);
  pointer-events: none;
}

.nav-left,
.nav-right {
  display: flex;
  gap: 1rem;
  align-items: center;
}

.nav-center {
  flex: 1;
  display: flex;
  justify-content: center;
}

.page-title {
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--primary-color);
  letter-spacing: 0.1em;
  text-shadow: 0 0 20px var(--glow-color);
}

.home-btn,
.social-btn {
  background: transparent;
  border: 1px solid var(--border-color);
  padding: 0.5rem;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  color: var(--primary-color);
}

.social-btn svg {
  width: 22px;
  height: 22px;
}

.home-btn svg {
  width: 20px;
  height: 20px;
  stroke: var(--primary-color);
  fill: none;
}

.home-btn:hover,
.social-btn:hover {
  transform: scale(1.05) translateY(-2px);
  background: var(--bg-overlay);
  border-color: var(--primary-color);
  box-shadow: 0 5px 15px var(--border-color);
}

/* ========================================
     INTRO SECTION
     ======================================== */
.intro-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 2rem;
  opacity: 1 !important;
  transform: translateY(0) !important;
}

.intro-content {
  text-align: center;
  max-width: 1000px;
}

.intro-title {
  font-size: clamp(2rem, 5vw, 3.5rem); /* Reduced from 4.5rem */
  margin-bottom: 2rem;
  line-height: 1.2;
}

.line1 {
  display: block;
  opacity: 0;
  text-shadow: 0 0 20px var(--glow-color);
  transform: translateY(60px) scale(0.8);
  white-space: nowrap; /* ADD THIS - prevents line break */
}

.line2 {
  display: block;
  font-size: 0.45em; /* Slightly smaller tagline */
  color: var(--primary-dark);
  opacity: 0;
  margin-top: 0.8rem;
  transform: translateY(40px);
}

.intro-description {
  font-size: 1.05rem; /* Slightly smaller for two lines */
  line-height: 1.8;
  color: var(--primary-dark);
  margin-bottom: 3rem;
  opacity: 0;
  transform: translateY(50px);
  max-width: 900px; /* Limit width for better readability */
  margin-left: auto;
  margin-right: auto;
}

.intro-stats {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 2rem;
  margin-top: 3rem;
  opacity: 0;
  transform: translateY(40px);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.5rem;
}

.stat-number {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--primary-color);
  text-shadow: 0 0 20px var(--glow-color);
}

.stat-label {
  font-size: 0.85rem;
  color: var(--primary-dark);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stat-number {
  display: inline-block;
  min-width: 80px;
  transition: transform 0.3s ease;
  opacity: 0; /* ADD THIS - hide initially */
}

/* Pulse glow effect during animation */
@keyframes statGlow {
  0%,
  100% {
    text-shadow: 0 0 20px var(--glow-color);
  }
  50% {
    text-shadow: 0 0 30px var(--glow-color),
      0 0 40px var(--glow-color);
  }
}

.stat-number.rolling {
  opacity: 1; /* ADD THIS - show during roll */
  animation: statGlow 2s ease-in-out;
}

.scroll-indicator {
  position: absolute;
  bottom: 20%;
  left: 50%;
  transform: translateX(-50%) translateY(30px) scale(0.7);
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
}

.scroll-indicator.hidden {
  opacity: 0 !important;
  pointer-events: none;
}

.mouse-icon {
  width: 24px;
  height: 38px;
  border: 2px solid var(--border-color);
  border-radius: 12px;
  position: relative;
  animation: mouseFloat 2s ease-in-out infinite;
}

.mouse-wheel {
  width: 3px;
  height: 8px;
  background: var(--primary-color);
  border-radius: 2px;
  position: absolute;
  left: 50%;
  top: 8px;
  transform: translateX(-50%);
  animation: mouseScroll 2s ease-in-out infinite;
}

@keyframes mouseFloat {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(5px);
  }
}

@keyframes mouseScroll {
  0% {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  100% {
    opacity: 0;
    transform: translateX(-50%) translateY(12px);
  }
}

/* ========================================
     SECTION COMMON STYLES
     ======================================== */
section {
  min-height: 100vh;
  padding: 6rem 2rem 150px 2rem;
  opacity: 0;
  transform: translateY(50px);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

section.revealed {
  opacity: 1;
  transform: translateY(0);
}

.intro-section {
  opacity: 1;
  transform: translateY(0);
}

.section-title {
  text-align: center;
  font-size: clamp(3rem, 7vw, 5rem);
  font-weight: 700;
  color: var(--primary-color);
  letter-spacing: 0.05em;
  margin-bottom: 4rem;
  text-shadow: 0 0 50px var(--glow-color);
}

/* ========================================
   JOURNEY PROGRAM SECTION - SIMPLE VERSION
   ======================================== */
.journey-program-section {
  min-height: 100vh;
  padding: 6rem 2rem 150px 2rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: translateY(50px);
  transition: opacity 0.8s ease, transform 0.8s ease;
}

.journey-program-section.revealed {
  opacity: 1;
  transform: translateY(0);
}

/* Month Cards Row */
.months-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  max-width: 1400px;
  width: 100%;
  margin-bottom: 6rem;
}

.month-card {
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  border-radius: 20px;
  padding: 2rem;
  transition: all 0.4s ease;
  opacity: 0;
  transform: translateY(30px);
}

.month-card.revealed {
  opacity: 1;
  transform: translateY(0);
}

.month-card:hover {
  border-color: var(--primary-color);
  transform: translateY(-10px);
  box-shadow: 0 20px 60px var(--glow-color);
}

.month-header {
  text-align: center;
  margin-bottom: 1.5rem;
  padding-bottom: 1rem;
  border-bottom: 2px solid var(--border-color);
}

.month-number {
  font-size: 0.75rem;
  color: var(--border-color);
  font-weight: 700;
  letter-spacing: 0.15em;
  margin-bottom: 0.5rem;
}

.month-title {
  font-size: 1.3rem;
  font-weight: 700;
  color: var(--primary-color);
  text-shadow: 0 0 20px var(--glow-color);
}

.module-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1rem;
}

.module-icon svg {
  width: 48px;
  height: 48px;
  stroke: var(--primary-color);
  filter: drop-shadow(0 0 15px var(--glow-color));
}

.module-title {
  font-size: 1rem;
  font-weight: 700;
  color: var(--primary-color);
  margin-bottom: 1rem;
  text-align: center;
}

.module-list {
  list-style: none;
  padding: 0;
  margin: 0 0 1rem 0;
}

.module-list li {
  font-size: 0.8rem;
  color: var(--primary-dark);
  margin-bottom: 0.5rem;
  padding-left: 1rem;
  position: relative;
  line-height: 1.5;
}

.module-list li::before {
  content: "â–¸";
  position: absolute;
  left: 0;
  color: var(--primary-color);
  font-weight: bold;
}

/* AI Tools Section */
.ai-tools-section {
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--border-color);
}

.ai-tools-title {
  font-size: 0.7rem;
  color: var(--border-color);
  font-weight: 700;
  letter-spacing: 0.15em;
  text-align: center;
  margin-bottom: 1rem;
  text-transform: uppercase;
}

.ai-tools-images {
  display: flex;
  gap: 0.8rem;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}

.ai-tool-img {
  width: 40px;
  height: 40px;
  object-fit: contain;
  border-radius: 8px;
  background: rgb(255, 255, 255);
  padding: 6px;
  transition: all 0.3s ease;
}

.ai-tool-img:hover {
  transform: scale(1.15);
  box-shadow: 0 4px 15px var(--border-color);
}

/* Program Information */
.program-info-title {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 700;
  color: var(--primary-color);
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
  text-align: center;
  text-shadow: 0 0 30px var(--glow-color);
}

.program-info-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  max-width: 1600px;
  width: 100%;
}

.program-info-card {
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  transition: all 0.4s ease;
  opacity: 0;
  transform: translateY(30px);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 200px;
}

.program-info-card.revealed {
  opacity: 1;
  transform: translateY(0);
}

.program-info-card:hover {
  border-color: var(--primary-color);
  transform: translateY(-5px);
  box-shadow: 0 10px 30px var(--border-color);
}

.info-icon {
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 1.5rem;
}

.info-icon svg {
  width: 48px;
  height: 48px;
  stroke: var(--primary-color);
  filter: drop-shadow(0 0 15px var(--glow-color));
}

.info-label {
  font-size: 0.8rem;
  color: var(--primary-dark);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 1rem;
  font-weight: 600;
  display: block;
}

.info-value {
  font-size: 1.1rem;
  font-weight: 700;
  color: var(--primary-color);
  line-height: 1.4;
  display: block;
}

/* ========================================
   WHY LEARN FROM ME - COVER FLOW EFFECT
   ======================================== */
.why-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 6rem 2rem 150px 2rem;
  overflow: hidden;
}

.why-carousel-wrapper {
  width: 100%;
  max-width: 1400px;
  height: 500px;
  position: relative;
  perspective: 1500px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.why-carousel-track {
  display: flex;
  gap: 3rem;
  position: relative;
  animation: scrollCoverFlow 40s linear infinite;
  padding: 0 100px;
}

.why-carousel-track:hover {
  animation-play-state: paused;
}

@keyframes scrollCoverFlow {
  0% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(
      calc(-280px * 5 - 15rem)
    ); /* Card width * number of original cards + gaps */
  }
}

.why-card {
  min-width: 280px;
  width: 280px;
  height: 400px;
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  border-radius: 16px;
  overflow: hidden;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
  cursor: pointer;
  transform-style: preserve-3d;
  position: relative;
}

/* Reflection effect */
.why-card::after {
  content: "";
  position: absolute;
  bottom: -100%;
  left: 0;
  right: 0;
  height: 100%;
  background: linear-gradient(to bottom, var(--bg-overlay), transparent);
  transform: scaleY(-1);
  opacity: 0.3;
  pointer-events: none;
}

.why-card:hover {
  border-color: var(--primary-color);
  box-shadow: 0 30px 80px var(--glow-color);
  z-index: 10;
}

.why-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.why-card:hover .why-image {
  transform: scale(1.05);
}

/* Image Block */
.why-image-block {
  width: 100%;
  height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    135deg,
    var(--bg-overlay),
    var(--bg-overlay)
  );
  border-bottom: 2px solid var(--border-color);
}

/* Optional: Add overlay gradient for better text readability */
.why-image-block::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(15, 15, 15, 0.4) 100%
  );
  pointer-events: none;
}

/* Title */
.why-title {
  padding: 1.5rem 1.5rem 0.8rem 1.5rem;
  font-size: 1.2rem;
  font-weight: 700;
  color: var(--primary-color);
  text-align: center;
  line-height: 1.3;
  text-shadow: 0 0 15px var(--glow-color);
}

/* Description */
.why-description {
  padding: 0 1.5rem 1.5rem 1.5rem;
  font-size: 0.9rem;
  color: var(--primary-dark);
  line-height: 1.5;
  text-align: center;
}

.why-description p {
  margin: 0;
}

