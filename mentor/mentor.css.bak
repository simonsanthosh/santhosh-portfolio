}

/* ========================================
   GALLERY SECTION
   ======================================== */
.gallery-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.gallery-subtitle {
  text-align: center;
  font-size: 1rem;
  color: var(--primary-dark);
  margin-bottom: 3rem;
  max-width: 600px;
}

.gallery-carousel-container {
  position: relative;
  width: 100%;
  max-width: 1200px;
  height: 600px;
  overflow: hidden;
  border-radius: 24px;
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  margin-bottom: 2rem;
}

.gallery-track {
  display: flex;
  height: 100%;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
}

.gallery-slide {
  min-width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  opacity: 0;
  transition: opacity 0.6s ease;
}

.gallery-slide.active {
  opacity: 1;
}

.gallery-image {
  max-width: 100%;
  max-height: 100%;
  width: auto;
  height: auto;
  object-fit: contain;
  border-radius: 16px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  transition: transform 0.3s ease;
}

.gallery-slide:hover .gallery-image {
  transform: scale(1.02);
}

/* Gallery Caption */
.gallery-caption {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 1px solid var(--border-color);
  padding: 1rem 2rem;
  border-radius: 12px;
  color: var(--primary-color);
  font-size: 0.95rem;
  text-align: center;
  max-width: 80%;
  opacity: 0;
  transition: opacity 0.4s ease;
}

.gallery-slide.active .gallery-caption {
  opacity: 1;
}

/* Gallery Navigation Arrows */
.gallery-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 60px;
  height: 60px;
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 10;
  transition: all 0.3s ease;
}

.gallery-arrow:hover {
  background: var(--border-color);
  border-color: var(--primary-color);
  transform: translateY(-50%) scale(1.1);
  box-shadow: 0 0 30px var(--glow-color);
}

.gallery-arrow:active {
  transform: translateY(-50%) scale(0.95);
}

.gallery-arrow svg {
  width: 28px;
  height: 28px;
  stroke: var(--primary-color);
  stroke-width: 2.5;
}

.gallery-arrow-left {
  left: 20px;
}

.gallery-arrow-right {
  right: 20px;
}

/* Gallery Dots Indicator */
.gallery-dots {
  display: flex;
  gap: 0.8rem;
  justify-content: center;
  align-items: center;
}

.gallery-dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: var(--border-color);
  border: 2px solid var(--glow-color);
  cursor: pointer;
  transition: all 0.3s ease;
}

.gallery-dot:hover {
  background: var(--glow-color);
  transform: scale(1.2);
}

.gallery-dot.active {
  background: var(--primary-color);
  border-color: var(--primary-color);
  box-shadow: 0 0 15px var(--glow-color);
  transform: scale(1.3);
}

/* ========================================
     FAQ SECTION
     ======================================== */
.faq-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.faq-container {
  max-width: 900px;
  width: 100%;
}

.faq-item {
  background: var(--bg-overlay);
  backdrop-filter: blur(20px);
  border: 2px solid var(--border-color);
  border-radius: 12px;
  margin-bottom: 1.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
  opacity: 0;
  transform: translateY(30px);
}

.faq-item.revealed {
  opacity: 1;
  transform: translateY(0);
}

.faq-question {
  padding: 1.5rem;
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--primary-color);
  cursor: pointer;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.faq-question:hover {
  background: var(--bg-overlay);
}

.faq-icon {
  width: 20px;
  height: 20px;
  stroke: #0cc060;
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.faq-item.active .faq-icon {
  transform: rotate(180deg);
}

.faq-answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease, padding 0.4s ease;
  padding: 0 1.5rem;
}

.faq-item.active .faq-answer {
  max-height: 500px;
  padding: 1rem 1.5rem 1.5rem 1.5rem;
}

.faq-answer p {
  font-size: 0.95rem;
  color: rgba(12, 192, 96, 0.8);
  line-height: 1.7;
}

/* ========================================
   CONTACT SECTION - EQUAL HEIGHT LAYOUT
   ======================================== */
.contact-content {
  max-width: 1400px;
  width: 100%;
}

.contact-split-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 3rem;
  align-items: stretch; /* Equal height */
}

/* LEFT SIDE - Header, Cards, Button */
.contact-left {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.contact-left-header {
  text-align: left;
  margin-bottom: 1rem;
}

.contact-left-title {
  font-size: clamp(1.8rem, 4vw, 2.5rem);
  font-weight: 700;
  color: #0cc060;
  letter-spacing: 0.05em;
  margin-bottom: 1rem;
  text-shadow: 0 0 30px rgba(12, 192, 96, 0.5);
  line-height: 1.2;
}

.contact-left-description {
  font-size: 1.3rem;
  line-height: 1.7;
  color: rgba(12, 192, 96, 0.8);
  max-width: 100%;
  text-align: justify;
}

/* Contact Cards Grid - Horizontal Layout with Separators */
.contact-cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem 3rem; /* vertical gap, horizontal gap */
  padding: 2rem 0;
}

/* Remove the old boxed styling */
.contact-info-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.2rem 0;
  border: none;
  background: transparent;
  backdrop-filter: none;
  border-radius: 0;
  transition: all 0.3s ease;
  position: relative;
}

/* Add separator line */
.contact-info-card::after {
  content: "";
  position: absolute;
  right: -1.5rem;
  top: 50%;
  transform: translateY(-50%);
  width: 1px;
  height: 60%;
  background: rgba(12, 192, 96, 0.3);
}

/* Remove separator for cards on the right side (2nd and 4th card) */
.contact-info-card:nth-child(2n)::after {
  display: none;
}

/* Remove separator for bottom row cards if only one row */
.contact-info-card:nth-last-child(-n + 2)::before {
  content: "";
  position: absolute;
  left: 0;
  top: -1rem;
  width: 100%;
  height: 1px;
  background: rgba(12, 192, 96, 0.3);
}

/* Remove top border for first row */
.contact-info-card:nth-child(-n + 2)::before {
  display: none;
}

.contact-info-card:hover {
  transform: translateX(5px);
  border: none;
  box-shadow: none;
}

.contact-info-card:hover .contact-card-icon {
  transform: scale(1.1);
  background: rgba(12, 192, 96, 0.15);
}

/* Icon Styling */
.contact-card-icon {
  width: 48px;
  height: 48px;
  min-width: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(12, 192, 96, 0.1);
  border-radius: 12px;
  flex-shrink: 0;
  transition: all 0.3s ease;
}

.contact-card-icon svg {
  width: 24px;
  height: 24px;
  stroke: #0cc060;
}

/* Content - Horizontal next to icon */
.contact-card-content {
  display: flex;
  flex-direction: column;
  gap: 0.4rem;
  text-align: left;
  flex: 1;
}

.contact-card-label {
  font-size: 0.75rem;
  color: rgba(12, 192, 96, 0.6);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  font-weight: 600;
}

.contact-card-value {
  font-size: 0.95rem;
  color: #0cc060;
  font-weight: 500;
  line-height: 1.4;
  text-decoration: none;
  transition: all 0.3s ease;
  cursor: pointer;
  pointer-events: auto;
}

.contact-card-value:hover {
  text-shadow: 0 0 10px rgba(12, 192, 96, 0.5);
}

/* Multiline values for Available Hours */
.contact-card-multiline div {
  font-size: 0.85rem;
  margin-bottom: 0.2rem;
  line-height: 1.3;
}

.contact-card-multiline div:last-child {
  margin-bottom: 0;
}

/* Syllabus Button & Submit Button - Equal Size */
.syllabus-btn,
.submit-btn {
  width: 100%;
  height: 56px; /* Fixed height */
  background: rgba(12, 192, 96, 0.1);
  border: 2px solid rgba(12, 192, 96, 0.4);
  color: #0cc060;
  padding: 0 2rem;
  border-radius: 12px;
  font-size: 1rem;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.8rem;
}

.syllabus-btn svg,
.submit-btn svg {
  width: 20px;
  height: 20px;
  stroke: currentColor;
  flex-shrink: 0;
}

.syllabus-btn:hover,
.submit-btn:hover {
  background: rgba(12, 192, 96, 0.2);
  border-color: #0cc060;
  transform: translateY(-2px);
  box-shadow: 0 5px 20px rgba(12, 192, 96, 0.3);
}

.syllabus-btn:active,
.submit-btn:active {
  transform: translateY(0);
}

/* Remove the margin-top from submit button since it's controlled by flex */
.submit-btn {
  margin-top: auto; /* Pushes to bottom */
}

/* RIGHT SIDE - Form (Equal Height) */
.contact-right {
  background: rgba(12, 192, 96, 0.05);
  backdrop-filter: blur(20px);
  border: 2px solid rgba(12, 192, 96, 0.3);
  border-radius: 16px;
  padding: 2.5rem;
  display: flex;
  flex-direction: column;
  height: 100%; /* Match left side height */
}

.form-title {
  font-size: 1.5rem;
  color: #0cc060;
  margin-bottom: 2rem;
  text-align: center;
  text-shadow: 0 0 20px rgba(12, 192, 96, 0.4);
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  flex: 1; /* Takes available space */
}

/* Form Row - Two Columns */
.form-row {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  position: relative;
}

.form-label {
  font-size: 0.9rem;
  color: rgba(12, 192, 96, 0.8);
  font-weight: 600;
}

.form-input,
.form-textarea {
  background: rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 8px;
  padding: 0.8rem 1rem;
  color: #0cc060;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
  font-size: 0.9rem;
  outline: none;
  transition: all 0.3s ease;
}

.form-input::placeholder,
.form-textarea::placeholder {
  color: rgba(12, 192, 96, 0.4);
}

.form-input:focus,
.form-textarea:focus {
  border-color: #0cc060;
  background: rgba(0, 0, 0, 0.6);
  box-shadow: 0 0 20px rgba(12, 192, 96, 0.3);
}

.form-input.error,
.form-textarea.error {
  border-color: #ff4444;
  animation: shake 0.3s ease;
}

.form-textarea {
  resize: vertical;
  min-height: 120px;
  flex: 1; /* Takes remaining space */
}

/* Custom Select Dropdown */
.custom-select {
  position: relative;
  user-select: none;
}

.select-trigger {
  background: rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 8px;
  padding: 0.8rem 1rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.custom-select:hover .select-trigger,
.custom-select.open .select-trigger {
  border-color: #0cc060;
  background: rgba(0, 0, 0, 0.6);
  box-shadow: 0 0 20px rgba(12, 192, 96, 0.3);
}

.custom-select.error .select-trigger {
  border-color: #ff4444;
  animation: shake 0.3s ease;
}

.select-value {
  color: rgba(12, 192, 96, 0.4);
  font-size: 0.9rem;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
}

.select-value.selected {
  color: #0cc060;
}

.select-arrow {
  width: 20px;
  height: 20px;
  stroke: #0cc060;
  transition: transform 0.3s ease;
}

.custom-select.open .select-arrow {
  transform: rotate(180deg);
}

.select-options {
  position: absolute;
  top: calc(100% + 0.5rem);
  left: 0;
  right: 0;
  background: rgba(15, 15, 15, 0.95);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 8px;
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s ease;
  z-index: 100;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

.custom-select.open .select-options {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.select-option {
  padding: 0.8rem 1rem;
  color: rgba(12, 192, 96, 0.8);
  font-size: 0.9rem;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
  cursor: pointer;
  transition: all 0.2s ease;
}

.select-option:hover {
  background: rgba(12, 192, 96, 0.1);
  color: #0cc060;
}

.select-option.active {
  background: rgba(12, 192, 96, 0.15);
  color: #0cc060;
  font-weight: 600;
}

/* Error Messages */
.error-message {
  font-size: 0.8rem;
  color: #ff4444;
  margin-top: 0.3rem;
  display: block;
  min-height: 1rem;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
}

@keyframes shake {
  0%,
  100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5px);
  }
  75% {
    transform: translateX(5px);
  }
}

/* PDF Modal (keep same as before) */
.pdf-modal {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(20px);
  z-index: 10000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 2rem;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.pdf-modal.active {
  opacity: 1;
  visibility: visible;
}

.pdf-modal-content {
  background: rgba(15, 15, 15, 0.95);
  border: 2px solid rgba(12, 192, 96, 0.3);
  border-radius: 16px;
  max-width: 900px;
  width: 100%;
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: slideUp 0.4s ease;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.pdf-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 1.5rem;
  border-bottom: 1px solid rgba(12, 192, 96, 0.3);
  gap: 1rem;
}

.pdf-filename-input {
  flex: 1;
  background: rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 8px;
  padding: 0.6rem 1rem;
  color: #0cc060;
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
  font-size: 0.9rem;
  outline: none;
}

.pdf-filename-input:focus {
  border-color: #0cc060;
  box-shadow: 0 0 15px rgba(12, 192, 96, 0.3);
}

.pdf-modal-actions {
  display: flex;
  gap: 0.8rem;
}

.pdf-download-btn,
.pdf-close-btn {
  width: 40px;
  height: 40px;
  background: rgba(12, 192, 96, 0.1);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.pdf-download-btn svg,
.pdf-close-btn svg {
  width: 20px;
  height: 20px;
  stroke: #0cc060;
}

.pdf-download-btn:hover,
.pdf-close-btn:hover {
  background: rgba(12, 192, 96, 0.2);
  border-color: #0cc060;
  transform: scale(1.05);
}

.pdf-viewer-container {
  flex: 1;
  overflow-y: auto;
  padding: 2rem;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}

.pdf-preview-image {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

/* Confetti Animation */
.confetti-piece {
  position: fixed; /* Changed from absolute to fixed */
  width: 10px; /* Made slightly bigger */
  height: 10px;
  background: #0cc060;
  border-radius: 50%;
  pointer-events: none;
  z-index: 10000; /* Higher z-index */
  animation: confettiFall 1s ease-out forwards;
  box-shadow: 0 0 10px rgba(12, 192, 96, 0.6); /* Add glow */
}

.confetti-piece:nth-child(1) {
  background: #0cc060;
  animation-delay: 0s;
}

.confetti-piece:nth-child(2) {
  background: rgba(12, 192, 96, 0.8);
  animation-delay: 0.05s;
  width: 8px;
  height: 8px;
}

.confetti-piece:nth-child(3) {
  background: rgba(12, 192, 96, 0.9);
  animation-delay: 0.1s;
  width: 12px;
  height: 12px;
}

.confetti-piece:nth-child(4) {
  background: #0cc060;
  animation-delay: 0.15s;
  width: 9px;
  height: 9px;
}

.confetti-piece:nth-child(5) {
  background: rgba(12, 192, 96, 0.7);
  animation-delay: 0.08s;
  width: 11px;
  height: 11px;
}

@keyframes confettiFall {
  0% {
    transform: translate(0, 0) scale(0) rotate(0deg);
    opacity: 1;
  }
  10% {
    transform: translate(var(--horizontal-offset-start), var(--fall-distance-start)) scale(1) rotate(45deg);
    opacity: 1;
  }
  100% {
    transform: translate(var(--horizontal-offset), var(--fall-distance)) scale(0.5) rotate(var(--rotation));
    opacity: 0;
  }
}

/* Tooltip with Spring Pop */
.copy-tooltip {
  position: absolute;
  top: -35px;
  left: 50%;
  transform: translateX(-50%) translateY(5px) scale(0.5);
  background: rgba(12, 192, 96, 0.95);
  color: #0f0f0f;
  padding: 0.5rem 1rem;
  border-radius: 8px;
  font-size: 0.8rem;
  font-weight: 600;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  white-space: nowrap;
  z-index: 1000;
  box-shadow: 0 4px 15px rgba(12, 192, 96, 0.4);
}

.copy-tooltip.show {
  opacity: 1;
  transform: translateX(-50%) translateY(0) scale(1);
}

/* ========================================
   DOCK BLUR OVERLAY
   ======================================== */
.dock-blur-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  backdrop-filter: blur(12px);
  z-index: 999;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.dock-blur-overlay.active {
  opacity: 1;
}

/* ========================================
     DOCK MENU
     ======================================== */
.dock-menu {
  position: fixed;
  bottom: 1.5rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 1.5rem;
  padding: 0.8rem 1.5rem;
  background: rgba(12, 192, 96, 0.05);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 50px;
  z-index: 1000;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
  opacity: 1;
  transition: opacity 0.4s ease, transform 0.4s ease;
}

.dock-menu.hidden {
  opacity: 0;
  pointer-events: none;
  transform: translateX(-50%) translateY(20px);
}

.dock-item {
  position: relative;
  width: 50px;
  height: 50px;
  background: transparent;
  border: 1px solid rgba(12, 192, 96, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  color: #0cc060;
  flex-shrink: 0;
}

.dock-item.hide-item {
  display: none;
}

.dock-item svg {
  width: 24px;
  height: 24px;
  stroke: currentColor;
  fill: none;
}

.dock-item:hover {
  background: rgba(12, 192, 96, 0.15);
  border-color: #0cc060;
  box-shadow: 0 0 30px rgba(12, 192, 96, 0.6);
  transform: scale(1.1);
}

.dock-item-label {
  position: absolute;
  bottom: 70px;
  left: 50%;
  transform: translateX(-50%) translateY(10px);
  background: rgba(12, 192, 96, 0.1);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(12, 192, 96, 0.3);
  color: #0cc060;
  padding: 0.6rem 1.2rem;
  border-radius: 12px;
  font-size: 0.8rem;
  font-weight: 600;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
  box-shadow: 0 8px 32px rgba(12, 192, 96, 0.2);
  font-family: "Cascadia Code", "JetBrains Mono", monospace;
}

.dock-item-label::after {
  content: "";
  position: absolute;
  bottom: -6px;
  left: 50%;
  transform: translateX(-50%);
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid rgba(12, 192, 96, 0.3);
}

.dock-item:hover .dock-item-label {
  opacity: 1;
  transform: translateX(-50%) translateY(0);
}

/* ========================================
     BACK TO TOP BUTTON
     ======================================== */
.back-to-top {
  position: fixed;
  bottom: 1.5rem;
  right: 2rem;
  width: 50px;
  height: 50px;
  background: rgba(12, 192, 96, 0.1);
  backdrop-filter: blur(20px);
  border: 2px solid rgba(12, 192, 96, 0.4);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: all 0.3s ease;
}

.back-to-top.show {
  opacity: 1;
  pointer-events: auto;
}

.back-to-top:hover {
  background: rgba(12, 192, 96, 0.2);
  border-color: #0cc060;
  transform: scale(1.1);
  box-shadow: 0 0 30px rgba(12, 192, 96, 0.5);
}

.back-to-top svg {
  width: 24px;
  height: 24px;
  stroke: #0cc060;
}

/* ========================================
     MOBILE RESPONSIVE
     ======================================== */
@media (max-width: 768px) {
  section {
    padding: 4rem 1.5rem 120px 1.5rem;
  }

  .mentor-nav {
    padding: 1rem 1.5rem;
  }

  .page-title {
    font-size: 0.9rem;
  }

  .nav-right {
    gap: 0.5rem;
  }

  .home-btn,
  .social-btn {
    width: 36px;
    height: 36px;
  }

  .social-btn svg {
    width: 18px;
    height: 18px;
  }

  .intro-stats {
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .why-card {
    min-width: 240px;
    width: 240px;
  }

  .why-image-block {
    height: 120px;
  }

  .why-icon {
    font-size: 3rem;
  }

  .why-title {
    font-size: 0.9rem;
    padding: 1.2rem 1.2rem 0.6rem 1.2rem;
  }

  .why-description {
    font-size: 0.8rem;
    padding: 0 1.2rem 1.2rem 1.2rem;
  }

  .learn-grid,
  .testimonials-container {
    grid-template-columns: 1fr;
  }

  .gallery-carousel-container {
    height: 400px;
  }

  .gallery-arrow {
    width: 50px;
    height: 50px;
  }

  .gallery-arrow-left {
    left: 10px;
  }

  .gallery-arrow-right {
    right: 10px;
  }

  .gallery-arrow svg {
    width: 24px;
    height: 24px;
  }

  .gallery-caption {
    font-size: 0.85rem;
    padding: 0.8rem 1.5rem;
    bottom: 1rem;
  }

  .gallery-dots {
    gap: 0.5rem;
  }

  .gallery-dot {
    width: 10px;
    height: 10px;
  }

  .program-info-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .form-buttons {
    flex-direction: column;
  }

  .contact-links {
    flex-direction: column;
    align-items: center;
  }

  .dock-menu {
    bottom: 1rem;
    padding: 0.6rem 1rem;
    gap: 0.8rem;
  }

  .dock-item {
    width: 45px;
    height: 45px;
  }

  .dock-item svg {
    width: 20px;
    height: 20px;
  }

  .dock-label {
    display: none;
  }

  .back-to-top {
    bottom: 1rem;
    right: 1.5rem;
    width: 45px;
    height: 45px;
  }
}
